{
  "info": {
    "name": "practice-api",
    "description": "Simple API collection for users, posts, and items.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Users",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/users",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users"]
        }
      }
    },
    {
      "name": "Get Posts",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/posts",
          "host": ["{{baseUrl}}"],
          "path": ["api", "posts"]
        }
      }
    },
    {
      "name": "Get Post By ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/posts/101",
          "host": ["{{baseUrl}}"],
          "path": ["api", "posts", "101"]
        }
      }
    },
    {
      "name": "Get Items",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/items",
          "host": ["{{baseUrl}}"],
          "path": ["api", "items"]
        }
      }
    },
    {
      "name": "Get Item By ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/items/201",
          "host": ["{{baseUrl}}"],
          "path": ["api", "items", "201"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001"
    }
  ]
}
